<?xml version="1.0" encoding="UTF-8"?>
<includes><!-- Aeon MQ 9 -->
	<include name="view_70">
		<control type="group">
			<animation effect="fade" time="400">VisibleChange</animation>
			<visible>Control.IsVisible(70)</visible>
			<control type="image">
				<width>1200</width>
				<height>2160</height>
				<texture flipx="true" colordiffuse="$INFO[skin.string(texture_base_color)]">shadow_mask_vertical.png</texture>
			</control>
			<control type="label">
				<left>550</left>
				<top>1350</top>
				<width>2450</width>
				<label>$VAR[media_title]</label>
				<font>font_view_title</font>
				<visible>[!Skin.HasSetting(view_70_art_as_title) | Skin.HasSetting(view_70_art_as_title) + String.IsEmpty(ListItem.Art(clearlogo))]</visible>
			</control>
			<control type="image">
				<left>550</left>
				<top>1350</top>
				<width>900</width>
				<height>120</height>
				<fadetime>common_fade_time</fadetime>
				<aspectratio align="left" aligny="center">keep</aspectratio>	
				<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>				
				<visible>Skin.HasSetting(view_70_art_as_title) + !String.IsEmpty(ListItem.Art(clearlogo))</visible>
			</control>					
			<control type="grouplist">
				<left>550</left>
				<top>1470</top>
				<width>2450</width>
				<height>615</height>
				<itemgap>14</itemgap>
				<animation effect="fade" end="100" time="200">Visible</animation>
				<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
				<visible>[String.IsEqual(skin.string(view_70_panel),always) | String.IsEqual(skin.string(view_70_panel),auto) + Control.IsVisible(7020) | String.IsEqual(skin.string(view_70_panel),manual) + Control.HasFocus(7030)] + !ListItem.IsParentFolder</visible>
				<control type="group">
					<left>100</left>
					<height>60</height>	
					<animation effect="fade" end="100" time="200">Visible</animation>
					<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
					<visible>Integer.IsGreater(ListItem.PercentPlayed,0)</visible>			
					<control type="progress">
						<top>20</top>
						<width>600</width>
						<height>20</height>
						<info>ListItem.PercentPlayed</info>
					</control>	
					<control type="label">
						<left>630</left>
						<width>160</width>
						<height>60</height>
						<label>$INFO[Container.ListItem.PercentPlayed]%</label>
						<font>font_plot</font>
					</control>	
				</control>			
				<control type="label">
					<width>3140</width>
					<height>120</height>
					<label>[B]$VAR[media_year,,   ][/B]$VAR[media_runtime,,   ]$INFO[ListItem.Artist,,   ]$VAR[media_tvshow_tag,,   ]$INFO[ListItem.TagLine,,   ]</label>
					<font>font_plot</font>
				</control>				
				<control type="label">
					<top>460</top>
					<width>1280</width>
					<height>70</height>		
					<label>$VAR[media_genre]</label>
					<font>font_plot</font>
					<textcolor>[B]$INFO[skin.string(header_color)][/B]</textcolor>
					<scroll>true</scroll>
				</control>
				<include content="media_info_plot">
					<param name="left" value="0" />
					<param name="top" value="0" />
					<param name="width" value="2450" />
					<param name="height" value="235" />
					<param name="label" value="$VAR[media_plot]" />							
					<param name="visible" value="$PARAM[plot]" />
				</include>
			</control>
			<control type="group">
				<include>animation_fade</include>
				<visible>![ListItem.IsParentFolder | String.IsEmpty(ListItem.DbType) | Skin.HasSetting(view_70_rating_off)]</visible>
				<include content="media_flags_rating_stars">
					<param name="flagleft" value="3054" />
					<param name="flagtop" value="1410" />
					<param name="condition" value="ListItem.UserRating" />
					<param name="visible" value="Integer.IsGreater(ListItem.UserRating,0) + ![ListItem.IsParentFolder | String.IsEmpty(ListItem.DbType)]" />
				</include>
				<include content="media_flags_rating_stars">
					<param name="flagleft" value="3054" />
					<param name="flagtop" value="1410" />
					<param name="condition" value="ListItem.Rating" />
					<param name="visible" value="!Integer.IsGreater(ListItem.UserRating,0) + ![ListItem.IsParentFolder | String.IsEmpty(ListItem.DbType)]" />
				</include>
				<control type="label">
					<left>2760</left>
					<top>1490</top>
					<width>900</width>
					<height>60</height>	
					<align>right</align>
					<label>$VAR[media_rating_info] $VAR[media_info_top250]</label>
					<font>font_plot</font>
				</control>
			</control>
			<control type="image">
				<left>3160</left>
				<top>1740</top>
				<width>498</width>
				<height>280</height>
				<fadetime>common_fade_time</fadetime>
				<aspectratio align="center" aligny="center">keep</aspectratio>	
				<texture background="true">$VAR[media_art]</texture>
				<include>animation_fade</include>
				<visible>![ListItem.IsParentFolder | Skin.HasSetting(view_70_art_off)]</visible>				
			</control>			
			<control type="image" id="7003">
				<include>invisible_image</include>
				<animation effect="fade" end="100" time="200" delay="300">WindowOpen</animation>
				<visible>![Container.OnNext | Container.OnPrevious]</visible>
			</control>
			<control type="group">
				<animation effect="slide" time="500" start="-2400,0" end="0,0" tween="cubic" easing="out">WindowOpen</animation>
				<animation effect="slide" time="500" start="-2400,0" end="0,0" tween="cubic" easing="out">Visible</animation>
				<animation effect="fade" time="200" start="100" end="0">Hidden</animation>
				<control type="wraplist" id="70">
					<viewtype label="-12">list</viewtype>
					<width>600</width>
					<height>2023</height>					
					<onleft>700</onleft>
					<onright condition="String.IsEqual(skin.string(view_70_panel),manual) + !String.IsEqual(ListItem.Label,..)">7030</onright>
					<onright condition="![String.IsEqual(skin.string(view_70_panel),manual) + !String.IsEqual(ListItem.Label,..)]">9900</onright>
					<pagecontrol>700</pagecontrol>
					<focusposition>2</focusposition>
					<visible>Container.Content(movies) | Container.Content(musicvideos) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)</visible>
					<itemlayout width="454" height="674">
						<control type="group">
							<animation effect="fade" start="100" end="30" time="400" condition="System.IdleTime(2) + !Skin.HasSetting(view_70_fade_off)">Conditional</animation>
							<control type="image">
								<left>4</left>
								<top>4</top>
								<width>454</width>
								<height>664</height>
								<aspectratio align="center" aligny="bottom">stretch</aspectratio>
								<texture background="true">$VAR[media_thumb]</texture>
								<bordertexture colordiffuse="$INFO[skin.string(texture_base_color)]" border="-4">white.png</bordertexture>
							</control>
							<include content="media_overlays">
								<param name="item" value="0" />
								<param name="left" value="370" />
								<param name="top" value="6" />
								<param name="size" value="90" />
								<param name="visible" value="true" />
							</include>
						</control>
					</itemlayout>
					<focusedlayout width="460" height="674">
						<include content="media_info_discart">
							<param name="view" value="70" />
							<param name="type" value="videos" />						
							<param name="left" value="12" />
							<param name="top" value="22" />
							<param name="size" value="440" />
							<param name="slidedisc1" value="0" />
							<param name="slidedisc2" value="-245" />
							<param name="sliderow" value="0" />
							<param name="sliderowcondition" value="false" />
							<param name="slidecolumn" value="-16" />
							<param name="slidecolumncondition" value="Skin.HasSetting(view_70_videos_case_off)" />
							<param name="visible" value="true" />
						</include>
						<control type="image">
							<left>4</left>
							<top>4</top>
							<width>454</width>
							<height>664</height>
							<aspectratio align="center" aligny="bottom">stretch</aspectratio>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<visible>ListItem.IsParentFolder</visible>
						</control>
						<control type="image">
							<left>4</left>
							<top>4</top>
							<width>454</width>
							<height>664</height>
							<aspectratio align="center" aligny="bottom">stretch</aspectratio>
							<texture background="true">$VAR[media_thumb]</texture>
							<bordertexture colordiffuse="$INFO[skin.string(texture_highlight_color)]" border="-4">white.png</bordertexture>
							<visible>!ListItem.IsParentFolder</visible>
						</control>
						<include content="media_overlays">
							<param name="item" value="0" />
							<param name="left" value="370" />
							<param name="top" value="6" />
							<param name="size" value="90" />
							<param name="visible" value="true" />
						</include>
					</focusedlayout>
				</control>
			</control>
		</control>
		<control type="image" id="7020">
			<include>invisible_image</include>
			<animation effect="fade" start="0" end="100" time="150" delay="2000">Visible</animation>
			<visible>![Container.OnNext | Container.OnPrevious]</visible>
		</control>
		<control type="button" id="7030">
			<include>invisible_button</include>
			<onleft>70</onleft>
			<onright>9900</onright>
			<onup>70</onup>
			<ondown>70</ondown>
		</control>	
		<include content="scroll_bar_vertical">
			<param name="id" value="700" />
			<param name="left" value="0" />
			<param name="top" value="20" />
			<param name="height" value="1983" />
			<param name="onleft" value="9900" />
			<param name="onright" value="70" />
			<param name="hiddenfocus" value="true" />
			<param name="visible" value="Control.IsVisible(70) + Control.HasFocus(700)" />
		</include>
	</include>
</includes>
