<?xml version="1.0" encoding="UTF-8"?>
<includes><!-- Aeon MQ 9 -->
	<include name="view_60">
		<control type="group">
			<animation effect="fade" time="400">VisibleChange</animation>
			<visible>Control.IsVisible(60)</visible>
			<include content="media_info_title">
				<param name="view" value="60" />
				<param name="vignette" value="false" />
				<param name="mask" value="true" />
				<param name="plot" value="true" />
				<param name="panel" value="true" />
			</include>			
			<include content="view_60_content" condition="!Skin.HasSetting(view_60_wraplist)">
				<param name="type" value="fixedlist" />
			</include>
			<include content="view_60_content" condition="Skin.HasSetting(view_60_wraplist)">
				<param name="type" value="wraplist" />
			</include>			
		</control>		
	</include>
	<include name="view_60_content">
		<definition>
			<control type="$PARAM[type]" id="60">
				<viewtype label="-06">Show Art</viewtype>
				<left>150</left>
				<top>1346</top>
				<width>3600</width>
				<height>1800</height>						
				<onup condition="String.IsEqual(skin.string(view_60_panel),manual) + !String.IsEqual(ListItem.Label,..)">6030</onup>
				<onup condition="![String.IsEqual(skin.string(view_60_panel),manual) + !String.IsEqual(ListItem.Label,..)]">9900</onup>
				<ondown>600</ondown>
				<pagecontrol>600</pagecontrol>
				<orientation>horizontal</orientation>
				<focusposition>2</focusposition>
				<animation effect="slide" start="0,0" end="0,-96" time="300" tween="sine" easing="out" condition="Control.HasFocus(600)">Conditional</animation>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(favourites)</visible>
				<itemlayout width="750" height="900">
					<control type="group">
						<visible>Container.Content(movies) | Container.Content(sets)</visible>
						<include content="media_info_art">
							<param name="view" value="60" />
							<param name="type" value="movies" />
							<param name="left" value="0" />
							<param name="top" value="0" />
							<param name="topreflect" value="545" />
							<param name="width" value="540" />
							<param name="height" value="540" />
							<param name="reflect" value="true" />
						</include>
					</control>
					<control type="group">
						<visible>Container.Content(tvshows)</visible>
						<include content="media_info_art">
							<param name="view" value="60" />
							<param name="type" value="tvshows" />
							<param name="left" value="0" />
							<param name="top" value="0" />
							<param name="topreflect" value="545" />
							<param name="width" value="540" />
							<param name="height" value="540" />
							<param name="reflect" value="true" />
						</include>
					</control>
					<control type="group">
						<visible>Container.Content(episodes)</visible>
						<include content="media_info_art">
							<param name="view" value="60" />
							<param name="type" value="episodes" />
							<param name="left" value="0" />
							<param name="top" value="0" />
							<param name="topreflect" value="545" />
							<param name="width" value="540" />
							<param name="height" value="540" />
							<param name="reflect" value="true" />
						</include>
					</control>					
					<include content="media_overlays">
						<param name="item" value="0" />
						<param name="left" value="450" />
						<param name="top" value="255" />
						<param name="size" value="80" />
						<param name="visible" value="true" />
					</include>
				</itemlayout>
				<focusedlayout width="750" height="900">
					<control type="group">
						<animation effect="zoom" start="100" end="160" center="270,480" time="400" easing="out" reversible="false" tween="cubic">Focus</animation>
							<control type="group">
							<visible>Container.Content(movies) | Container.Content(sets)</visible>
							<include content="media_info_art">
								<param name="view" value="60" />
								<param name="type" value="movies" />
								<param name="left" value="0" />
								<param name="top" value="0" />
								<param name="topreflect" value="545" />
								<param name="width" value="540" />
								<param name="height" value="540" />
								<param name="reflect" value="true" />
							</include>
						</control>
						<control type="group">
							<visible>Container.Content(tvshows)</visible>
							<include content="media_info_art">
								<param name="view" value="60" />
								<param name="type" value="tvshows" />
								<param name="left" value="0" />
								<param name="top" value="0" />
								<param name="topreflect" value="545" />
								<param name="width" value="540" />
								<param name="height" value="540" />
								<param name="reflect" value="true" />
							</include>
						</control>
						<control type="group">
						<visible>Container.Content(episodes)</visible>
						<include content="media_info_art">
							<param name="view" value="60" />
							<param name="type" value="episodes" />
							<param name="left" value="0" />
							<param name="top" value="0" />
							<param name="topreflect" value="545" />
							<param name="width" value="540" />
							<param name="height" value="540" />
							<param name="reflect" value="true" />
						</include>
					</control>
						<include content="media_overlays">
							<param name="item" value="0" />
							<param name="left" value="450" />
							<param name="top" value="255" />
							<param name="size" value="80" />
							<param name="visible" value="true" />
						</include>
					</control>
				</focusedlayout>
			</control>					
		</definition>
		<control type="image" id="6020">
			<include>invisible_image</include>
			<animation effect="fade" start="0" end="100" time="150" delay="2000">Visible</animation>
			<visible>![Container.OnNext | Container.OnPrevious]</visible>
		</control>
		<control type="button" id="6030">
			<include>invisible_button</include>
			<onleft>60</onleft>
			<onright>60</onright>
			<onup>9900</onup>
			<ondown>60</ondown>
		</control>
	</include>
</includes>
